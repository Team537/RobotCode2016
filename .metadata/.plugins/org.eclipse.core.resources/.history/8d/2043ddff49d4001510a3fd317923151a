#ifndef DRIVEOUTPUT_HPP
#define DRIVEOUTPUT_HPP

#include <Schematic.hpp>
#include <PIDOutput.h>

class DriveInput: public PIDSource
{
    private:
        float target;
    public:
        DriveInput() :
                PIDOutput()
        {
            target = -1;
        }

        void SetPIDSourceType(PIDSourceType pidSource)
        {
            m_pidSource = pidSource;
        }

        void SetPIDTarget(double center)
        {
            this->target = center;
        }

        double PIDGet()
        {
            return target;
        }

};

#endif
