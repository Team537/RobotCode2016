// include header files
#include <DriveTrain.hpp>

// function that sets the speed of the motors
void DriveTrain::Drive ()
{
	if (shooter->isActivated()) {
		double goalPosX = (shooter->GetVision()->GetGoalXOffset() / WEBCAM_PIXEL_WIDTH) * 2 - 1;
		visionPID->Enable();
		visionSource->SetPIDCenter(goalPosX);
		visionPID->SetSetpoint(0);
		leftCurrentSpeed = visionOutput->GetOutput();
		SmartDashboard::PutNumber("Right Drive", visionOutput->GetOutput());

	}
	else{
		// get the position of the left and right joysticks
		leftCurrentSpeed = joystick->GetRawAxis(LEFT_AXIS);
		rightCurrentSpeed = joystick->GetRawAxis(RIGHT_AXIS);
		// deadband
		if (fabs(leftCurrentSpeed) < JOYSTICK_DEADBAND)
		{
			leftCurrentSpeed = 0;
		}
		if (fabs(rightCurrentSpeed) < JOYSTICK_DEADBAND)
		{
			rightCurrentSpeed = 0;
		}
		// ramping
		leftDeltaSpeed = leftCurrentSpeed - leftOldSpeed;
		leftDeltaSpeed = rightCurrentSpeed - rightOldSpeed;
		leftDriveSign = leftCurrentSpeed/fabs(leftCurrentSpeed);
		rightSign = rightCurrentSpeed/fabs(rightCurrentSpeed);
		if (fabs(leftDeltaSpeed) > RAMP_SPEED)
		{
			leftCurrentSpeed = leftOldSpeed + leftDriveSign*RAMP_SPEED;
		}
		if (fabs(rightDeltaSpeed) > RAMP_SPEED)
		{
			rightCurrentSpeed = rightOldSpeed + rightSign*RAMP_SPEED;
		}
		// clamping
		if (fabs(leftCurrentSpeed) > 1)
		{
			leftCurrentSpeed = leftDriveSign;
		}
		if (fabs(rightCurrentSpeed) > 1)
		{
			rightCurrentSpeed = rightSign;
		}
		// log the left and right speeds
		leftOldSpeed = leftCurrentSpeed;
		rightOldSpeed = rightCurrentSpeed;
		// set the motors
		leftDrive->SetSpeed(leftCurrentSpeed);
		rightDrive->SetSpeed(-rightCurrentSpeed);
	}
}

void DriveTrain::FirePiston(bool FireOn, bool FireOff)
{
	shooter->Feed(FireOn, FireOff);
}

void DriveTrain::Shoot(bool ShooterOn)
{
	shooter->Shoot(ShooterOn);
}
