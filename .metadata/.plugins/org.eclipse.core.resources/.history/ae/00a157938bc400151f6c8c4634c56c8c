#ifndef DRIVETRAIN_HPP
#define DRIVETRAIN_HPP

#include "Schematic.hpp"

class DriveTrain {
private:
	Victor *leftVictor;
	Victor *rightVictor;
	Solenoid *shifter;

public:
	DriveTrain() {
		leftVictor = new Victor(0);
		rightVictor = new Victor(1);
		shifter = new Solenoid(0);
	}

	void Drive(Joystick * joystick);

	void Shift(int gear);
};

#endif
