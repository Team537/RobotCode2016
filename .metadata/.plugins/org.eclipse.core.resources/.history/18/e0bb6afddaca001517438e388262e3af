#ifndef ANGLE_PID_SOURCE_HPP
#define ANGLE_PID_SOURCE_HPP

#include <Schematic.hpp>

class AnglePIDSource: public PIDSource
{
private:
	double target;
public:
	AnglePIDSource()
	{
		target = -1;
	}

	void SetPIDSourceType(PIDSourceType pidSource)
	{
		m_pidSource = pidSource;
	}

	void SetPIDTarget(double center)
	{
		this->target = center;
	}

	double PIDGet()
	{
		return target;
	}
};

#endif
