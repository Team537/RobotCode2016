#include <Climber/Climber.hpp>

void Climber::Update(bool teleop)
{
    if (teleop)
    {
        if (startClimbing->WasDown())
        {
            climbing = !climbing;
        }
    }

    if (!climbing)
    {
        deployStage1->Set(false);
        deployStage2->Set(false);
        climberExtend->Set(false);
    }
}

void Climber::Dashboard()
{
}

bool Climber::IsClimbing()
{
    return climbing;
}
