#pragma once

#include <Schematic.hpp>

class RobotButton
{
    enum JoystickType { PRIMARY, SECONDARY };
    enum ControlTypes { KEY, AXIS };

    private:
        Joystick *joystick;
        unsigned int key;
        bool axis;
        bool lastState;

    public:
        RobotButton(JoystickType type, unsigned int key, bool axis) :
            joystick(joystick),
            key(key),
            axis(axis),
            lastState(false)
        {
        }

        virtual ~RobotButton()
        {
        }

        bool GetState();
        bool WasDown();
};
