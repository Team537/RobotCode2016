#ifndef DRIVEOUTPUT_HPP
#define DRIVEOUTPUT_HPP

#include <Schematic.hpp>
#include <PIDOutput.h>

class DriveAngle
{
    public:
        class AngleOutput: public PIDOutput
        {
            private:
                float output;

                AngleOutput() :
                        PIDOutput()
                {
                    output = 0;
                }

                void PIDWrite(float output)
                {
                    this->output = output;
                }

                float Get()
                {
                    return output;
                }
        };

        class AngleSource: public PIDSource
        {
            private:
                float value;

            public:
                AngleSource() :
                        PIDSource()
                {
                    value = -1;
                }
        };

        DriveAngle()
        {

        }

};

#endif
