#ifndef IAUTONOMUS_HPP
#define IAUTONOMUS_HPP

#include <Schematic.hpp>

using namespace std;

class IAutonomous {
private:
	string name;

public:
	IAutonomous(string autoName) {
		name = autoName;
	}

	void AutonomousUpdate(double time)
	{
		Start();
		Run(time);
		Stop();
	}

	virtual void Start() {}
	virtual bool Run(double time) {}
	virtual void Stop() {}

	inline string GetName() { return name; }
};

#endif
