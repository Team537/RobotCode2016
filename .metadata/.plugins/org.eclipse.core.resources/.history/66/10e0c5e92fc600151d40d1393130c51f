#ifndef ICOMPONENT_HPP
#define ICOMPONENT_HPP

#include "Schematic.hpp"

class IComponent {
private:
	Joystick *joystick;
	std::string *name;
public:
	IComponent(Joystick *joystick, std::string *name) {
		this->joystick = joystick;
		this->name = name;
	}

	virtual void Update() {}
	virtual void Dashboard() {}
	virtual void CleanUp() {}

	Joystick* GetJoystick() {
		return joystick;
	}

	std::string* GetName() {
		return name;
	}
};

#endif
