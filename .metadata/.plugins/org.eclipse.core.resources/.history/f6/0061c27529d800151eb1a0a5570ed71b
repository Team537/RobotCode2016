#ifndef TAKEBACKHALF_HPP
#define TAKEBACKHALF_HPP

#include <Schematic.hpp>

class TakeBackHalf
{
    private:
        float input;
        float output;
        Timer *timer;

        void Update();
    public:
        TakeBackHalf()
        {
            input = 0.0f;
            output = 0.0f;
            timer = new Timer();
        }

        void Enable();
        void Disable();

        float GetInput();
        void SetInput(float input);

        float GetOutput();
};

#endif
