#pragma once

#include <Schematic.hpp>

class RobotButton
{
    enum JoystickType { PRIMARY, SECONDARY };
    enum ControlTypes { KEY, AXIS };

    private:
        JoystickType joystickType;
        ControlTypes controlsType;
        unsigned int key;
        bool lastState;

    public:
        RobotButton(JoystickType joystickType, ControlTypes controlsType, unsigned int key, bool axis) :
            joystickType(joystickType),
            controlsType(controlsType),
            key(key),
            axis(axis),
            lastState(false)
        {
        }

        virtual ~RobotButton()
        {
        }

        bool GetState();
        bool WasDown();
};
