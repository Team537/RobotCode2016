#include <Drive/DriveTest.hpp>

void DriveTest::Update(DriveTrain *driveTrain) {
	double reading = anglePID->anglePID->Get(); // -1 => 1

	double left = 0;
	double right = 0;

	if (reading < 0){
		left = -1;
		right = 1;
	}
	else if (reading > 0) {
		left = 1;
		right = -1;
	}

	left *= fabs(reading);
	right *= fabs(reading);

	//
	left = ((reading > 0) ? 1 : -1) * fabs(reading);
	right = ((reading > 0) ? -1 : 1) * fabs(reading);

	driveTrain->Drive(left, right);
}

bool DriveTest::AtTarget() {
	return anglePID->anglePID->OnTarget();
}
