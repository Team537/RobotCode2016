#ifndef IAUTONOMUS_HPP
#define IAUTONOMUS_HPP

#include <Schematic.hpp>

using namespace std;

class IAutonomous {
private:
	string name;
	bool started;

public:
	IAutonomous(string autoName) {
		name = autoName;
		started = false;
	}

	void AutonomousUpdate(double time)
	{
		if (!started)
		{
			Start();
			started = true;
		}
		else if (time < 15)
		{
			bool running = true;

			if (started)
			{
				running = Run(time);
			}

			if (!running)
			{
				Stop();
				started = false;
			}
		}
	}

	virtual void Start() {}
	virtual bool Run(double time) {}
	virtual void Stop() {}

	inline string GetName() { return name; }
};

#endif
