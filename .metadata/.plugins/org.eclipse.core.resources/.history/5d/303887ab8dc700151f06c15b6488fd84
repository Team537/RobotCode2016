#include "Schematic.hpp"
#include "DriveTrain.hpp"
#include "Shooter/Shooter.hpp"

class Robot: public SampleRobot
{
	Joystick *Stick;
	DriveTrain *TankDrive;
	Shooter *WheelShooter;
	Solenoid *TestPiston;

public:
	Robot()
	{
		Stick = new Joystick(PRIMARY_CONTROLLER);
		TankDrive = new DriveTrain(Stick);
		WheelShooter = new Shooter();
		TestPiston = new Solenoid(4);
	}

	void RobotInit()
	{

	}


	void Autonomous()
	{


	}


	void OperatorControl()
	{
		while (IsOperatorControl())
		{
			WheelShooter->Shoot(Stick->GetRawButton(5));
			TankDrive->Drive();
			TankDrive->FirePiston(Stick->GetRawButton(3), Stick->GetRawButton(4));
			if(Stick->GetRawButton(2) == 1)
			{
				TestPiston->Set(1);
			}
			if(Stick->GetRawButton(1) == 1)
			{
				TestPiston->Set(0);
			}
		}
	}

	void Test()
	{

	}
};

START_ROBOT_CLASS(Robot)
