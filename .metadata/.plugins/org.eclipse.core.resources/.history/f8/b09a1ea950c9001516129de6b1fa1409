#ifndef SHOOTERMANAGER_HPP
#define SHOOTERMANAGER_HPP

#include <Schematic.hpp>
#include <Toolbox/MyButton.hpp>
#include <Vision/VisionManager.hpp>

using namespace std;

class ShooterManager : public IComponent
{
private:
	Vision *vision;
	MyButton *activateButton;
	bool activated;

public:
	ShooterManager(Joystick *joystick, Vision *vision) : IComponent(joystick, new string("Shooter"))
	{
		this->vision = vision;
		activateButton = new MyButton(joystick, 10);
		activated = false;
	}

	void Update();
	void Dashboard();

	Vision* GetVision() const
	{
		return vision;
	}

	bool IsActivated() const
	{
		return activated;
	}
};

#endif
