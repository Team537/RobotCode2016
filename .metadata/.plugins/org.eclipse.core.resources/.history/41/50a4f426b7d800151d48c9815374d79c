#ifndef AUTONOMOUSREACH_HPP
#define AUTONOMOUSREACH_HPP

#include <DriveTrain/DriveTrain.hpp>
#include <Schematic.hpp>

class AutonomousReach: public IAutonomous
{
    private:
        DriveTrain *driveTrain;
        Shooter *shooter;
        int reachState;

    public:
        AutonomousReach(SendableChooser *chooser, bool defaultChooser, DriveTrain *driveTrain, Shooter *shooter) :
                IAutonomous(chooser, defaultChooser, "Reach")
        {
            this->driveTrain = driveTrain;
            this->shooter = shooter;
            reachState = 0;
        }

        void Start();bool Run(double time);
        void Stop();
};

#endif
