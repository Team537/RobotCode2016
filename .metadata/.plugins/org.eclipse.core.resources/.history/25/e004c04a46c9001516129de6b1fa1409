#ifndef SHOOTERMANAGER_HPP
#define SHOOTERMANAGER_HPP

#include <Schematic.hpp>
#include <Shooter/ShooterVision.hpp>

using namespace std;

class ShooterManager : IComponent
{
private:
	ShooterVision *shooterVision;
	bool activated;

public:
	ShooterManager(Joystick *joystick, Robot *robot) : IComponent(joystick, robot, new string("Shooter"))
	{
		shooterVision = new ShooterVision();
		activated = false;
	}

	void Update();
	void Dashboard();
	void CleanUp();

	ShooterVision* GetShooterVision() const
	{
		return shooterVision;
	}

	bool GetActivated() const
	{
		return activated;
	}
};

#endif
