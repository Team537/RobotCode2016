#ifndef SHOOTERVISION_HPP
#define SHOOTERVISION_HPP

#include "Schematic.hpp"

class ShooterVision {
private:
	std::shared_ptr<NetworkTable> goalImageTable;
	double goalArea;
	double goalCenterX;
	double goalWidth;
	double goalHeight;
	double goalDistance;

public:
	ShooterVision() {
		goalImageTable = NetworkTable::GetTable("GRIP/myContoursReport");
		goalArea = 0;
		goalCenterX = 0;
		goalWidth = 0;
		goalHeight = 0;
		goalDistance = 0;
	}

	void Update();
	void Dashboard();

	double getGoalArea() const {
		return goalArea;
	}

	double getGoalCenterX() const {
		return goalCenterX;
	}

	double getGoalDistance() const {
		return goalDistance;
	}

	double getGoalHeight() const {
		return goalHeight;
	}

	const std::shared_ptr<NetworkTable>& getGoalImageTable() const {
		return goalImageTable;
	}

	double getGoalWidth() const {
		return goalWidth;
	}
};

#endif
