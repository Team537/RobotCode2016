#ifndef TAKEBACKHALF_HPP
#define TAKEBACKHALF_HPP

#include <Schematic.hpp>

class TakeBackHalf
{
    private:
        float target;
        float input;
        float output;
        float speed;
        Timer *timer;

        void Update();
    public:
        TakeBackHalf(float s)
        {
            target = 0.0f;
            input = 0.0f;
            output = 0.0f;
            speed = s;
            timer = new Timer();
        }

        void Enable();
        void Disable();

        float GetTarget();
        void SetTarget(float target);

        float GetInput();
        void SetInput(float input);

        float GetOutput();

        float GetError();
};

#endif
