#ifndef DRIVETRAIN_HPP
#define DRIVETRAIN_HPP
#include "Schematic.hpp"

class DriveTrain {
private:
	Victor *RightDrive;
	Victor *LeftDrive;
	Solenoid *Shifter;
	bool shifted;
public:
	DriveTrain() {
		RightDrive = new Victor(0);
		LeftDrive = new Victor(1);
		Shifter = new Solenoid(0);
		shifted = false;
	}
	void run (Joystick *Joy);
};

#endif
